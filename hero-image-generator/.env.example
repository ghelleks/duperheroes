# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT=your-project-id

# Authentication (choose one method)
# Method 1: Service Account Key (if organizational policy allows)
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# Method 2: Service Account Impersonation (if key creation is disabled)
# GOOGLE_IMPERSONATE_SERVICE_ACCOUNT=hero-image-generator@your-project-id.iam.gserviceaccount.com

# Method 3: Application Default Credentials (no additional config needed)

# Vertex AI Configuration
VERTEX_AI_REGION=us-central1
VERTEX_AI_MODEL=imagen-3.0-generate-001

# Image Generation Settings
IMAGE_OUTPUT_SIZE=512x512
IMAGE_FORMAT=png
IMAGE_QUALITY=high

# API Rate Limiting
BATCH_SIZE=5
RATE_LIMIT_DELAY=2000
MAX_RETRIES=3

# Output Configuration
OUTPUT_DIRECTORY=../public/images
DEBUG_OUTPUT=../public/debug/image-generation.json

# Development Settings
DRY_RUN=false
VERBOSE_LOGGING=true